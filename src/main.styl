@import '~normalize.css/normalize.css'
@import '~bukwild-stylus-library'
@import './stylus/mixins.styl'

@import './stylus/typography.styl'


// Set font-sizes so rem values for responsive effects.  Combined with the
// font() call on `body`, this scales from 20px down to 14px
:root
  mq-values(font-size, 100%, 80%, 1200px)

body
  background-color #FAACA8
  background-image linear-gradient(19deg, pink 0%, purple 90%)
  background-attachment fixed

  *
    color white

*, *:before, *:after
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


.heading
  font-family 'Monoton', cursive
  text-transform uppercase
  font-weight normal

.block
  max-width 1200px
  margin-left auto
  margin-right @margin-left
  padding 8rem 20px

p
  font-size 30px
  line-height 1.5

a.hoverable
  color white
  display inline-block
  text-decoration none
  position relative
  transition all 0.2s ease
  cursor pointer
  gpu-cache()

  &:after
    content ' '
    position absolute
    display block
    bottom 0.5rem
    left 0
    right 0
    border-top 2px solid white
    transition all 0.2s ease
    pointer-events none

  &:hover,
  &:active
    transform rotate(-3deg) scale(1.05)

    &:after
      opacity 0

  &.hoverable-light
    font-weight 600


    &:after
      border-width 1px
      bottom 0.35rem
